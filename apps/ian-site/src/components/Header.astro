---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<button class="hamburger" aria-expanded="false" aria-controls="mobile-nav-drawer" aria-label="Toggle navigation menu">
			<span></span>
			<span></span>
			<span></span>
		</button>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="/projects">Projects</HeaderLink>
			<HeaderLink href="/gallery">Gallery</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
		</div>
	</nav>
</header>

<script>
	// Initialize mobile navigation drawer
	(function initMobileNav() {
		// Check if already initialized
		if (document.getElementById('site-frame')) return;

		// Create site frame wrapper
		const siteFrame = document.createElement('div');
		siteFrame.id = 'site-frame';

		// Move all body children into site frame
		while (document.body.firstChild) {
			siteFrame.appendChild(document.body.firstChild);
		}

		// Create overlay
		const overlay = document.createElement('div');
		overlay.className = 'mobile-nav__overlay';
		overlay.setAttribute('aria-hidden', 'true');

		// Create drawer
		const drawer = document.createElement('nav');
		drawer.id = 'mobile-nav-drawer';
		drawer.className = 'mobile-nav__drawer';
		drawer.setAttribute('aria-hidden', 'true');
		drawer.setAttribute('aria-modal', 'true');
		drawer.setAttribute('role', 'dialog');

		// Clone nav links into drawer
		const navLinks = document.querySelector('.internal-links');
		if (navLinks) {
			const drawerLinks = navLinks.cloneNode(true) as HTMLElement;
			drawerLinks.className = 'mobile-nav__links';
			drawer.appendChild(drawerLinks);
		}

		// Append to body
		document.body.appendChild(siteFrame);
		document.body.appendChild(overlay);
		document.body.appendChild(drawer);

		// Get hamburger button
		const hamburger = document.querySelector('.hamburger') as HTMLButtonElement | null;
		if (!hamburger) return;

		// Create a stable reference for the hamburger button
		const hamburgerElement = hamburger;

		// Toggle navigation
		function toggleNav(open?: boolean) {
			const isOpen = open ?? !document.body.classList.contains('nav-open');
			document.body.classList.toggle('nav-open', isOpen);
			hamburgerElement.setAttribute('aria-expanded', String(isOpen));
			overlay.setAttribute('aria-hidden', String(!isOpen));
			drawer.setAttribute('aria-hidden', String(!isOpen));

			if (isOpen) {
				// Focus first link in drawer
				const firstLink = drawer.querySelector('a');
				firstLink?.focus();
			} else {
				// Return focus to hamburger
				hamburgerElement.focus();
			}
		}

		// Event listeners
		hamburgerElement.addEventListener('click', () => toggleNav());
		overlay.addEventListener('click', () => toggleNav(false));

		// Close on Escape
		document.addEventListener('keydown', (e) => {
			if (e.key === 'Escape' && document.body.classList.contains('nav-open')) {
				toggleNav(false);
			}
		});

		// Close when clicking drawer links
		drawer.addEventListener('click', (e) => {
			if ((e.target as HTMLElement).tagName === 'A') {
				toggleNav(false);
			}
		});
	})();
</script>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--bg);
		border-bottom: 1px solid var(--border-faint);
		box-shadow: 0 2px 12px rgba(0, 0, 0, 0.3);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: var(--text);
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
	}
	nav h2 {
		margin-right: auto;
	}

	/* Hamburger button - hidden on desktop */
	.hamburger {
		display: none;
		flex-direction: column;
		gap: 4px;
		background: transparent;
		border: none;
		cursor: pointer;
		padding: 0.5em;
		margin-left: auto;
		z-index: 1;
	}
	.hamburger span {
		display: block;
		width: 24px;
		height: 3px;
		background: var(--text);
		border-radius: 2px;
		transition: all 0.3s ease;
	}
	.hamburger:focus {
		outline: 2px solid var(--cyan);
		outline-offset: 2px;
		box-shadow: var(--glow-cyan);
	}

	.internal-links {
		display: flex;
		gap: 0.5em;
	}

	/* Desktop: center nav links */
	@media (min-width: 721px) {
		.internal-links {
			position: absolute;
			left: 50%;
			transform: translateX(-50%);
		}
	}

	nav a {
		padding: 1em 0.5em;
		color: var(--text);
		border-bottom: 4px solid transparent;
		text-decoration: none;
		transition: border-bottom-color 0.2s ease, color 0.2s ease;
	}
	nav a.active {
		color: var(--lime);
		border-bottom: 4px solid var(--lime);
		border-image: none;
		text-shadow: 0 0 6px var(--lime);
	}
	nav a:hover:not(.active) {
		color: var(--cyan);
		border-bottom: 4px solid var(--cyan);
		text-shadow: 0 0 6px var(--cyan);
	}
	nav a:focus {
		outline: 2px solid var(--cyan);
		outline-offset: 2px;
		box-shadow: var(--glow-cyan);
	}

	@media (max-width: 720px) {
		.hamburger {
			display: flex;
		}
		.internal-links {
			display: none;
		}
	}
</style>
