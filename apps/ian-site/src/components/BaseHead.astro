---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/global.css';
import { resolveMeta } from '../seo/metaRegistry';

interface Props {
	metaKey: string;
	title: string;
	description: string;
	image?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { metaKey, title, description, image } = Astro.props;

// Resolve meta from registry with fallbacks
const resolvedMeta = resolveMeta({
	key: metaKey,
	fallback: { title, description, image },
});

// Ensure og:image is an absolute URL when possible
const ogImage = resolvedMeta.image 
	? (Astro.site ? new URL(resolvedMeta.image, Astro.site).href : resolvedMeta.image)
	: (Astro.site ? new URL('/blog-placeholder-1.jpg', Astro.site).href : '/blog-placeholder-1.jpg');

// Use summary_large_image when image exists, otherwise summary
const twitterCard = resolvedMeta.image ? 'summary_large_image' : 'summary';
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="generator" content={Astro.generator} />

<!-- Font preloads -->
<link rel="preload" href="/fonts/geist-sans-latin-300-normal.woff2" as="font" type="font/woff2" crossorigin />
<link rel="preload" href="/fonts/geist-sans-latin-400-normal.woff2" as="font" type="font/woff2" crossorigin />
<link rel="preload" href="/fonts/geist-sans-latin-500-normal.woff2" as="font" type="font/woff2" crossorigin />
<link rel="preload" href="/fonts/geist-sans-latin-600-normal.woff2" as="font" type="font/woff2" crossorigin />
<link rel="preload" href="/fonts/geist-sans-latin-700-normal.woff2" as="font" type="font/woff2" crossorigin />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{resolvedMeta.title}</title>
<meta name="title" content={resolvedMeta.title} />
<meta name="description" content={resolvedMeta.description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={resolvedMeta.title} />
<meta property="og:description" content={resolvedMeta.description} />
<meta property="og:image" content={ogImage} />

<!-- Twitter -->
<meta property="twitter:card" content={twitterCard} />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={resolvedMeta.title} />
<meta property="twitter:description" content={resolvedMeta.description} />
<meta property="twitter:image" content={ogImage} />
