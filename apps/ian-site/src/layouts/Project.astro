---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'projects'>['data'] & {
	projectId: string;
};

const { title, date, type, genre, pages, description, heroImage, projectId } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead 
			metaKey={`project:${projectId}`}
			title={`${title} | Ian Slater`}
			description={description || `${type} - ${genre.join(', ')}`}
			image={heroImage}
		/>
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: var(--text);
			}
			.title {
				margin-bottom: 2em;
				padding: var(--pad-lg);
				background: var(--surface-1);
				border: 1px solid var(--border-strong);
				border-radius: var(--radius-lg);
				box-shadow: var(--shadow);
				text-align: center;
				line-height: 1;
				position: relative;
			}
			.title::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				height: 2px;
				background: linear-gradient(90deg, var(--cyan), var(--blue));
				border-radius: var(--radius-lg) var(--radius-lg) 0 0;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
				background: linear-gradient(135deg, var(--cyan), var(--blue));
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
			}
			.meta {
				margin-bottom: 1em;
				color: var(--muted);
				display: flex;
				flex-direction: column;
				gap: 0.5rem;
				align-items: center;
			}
			.type {
				text-transform: capitalize;
				font-weight: 600;
				color: var(--cyan);
			}
			.genre {
				font-style: italic;
			}
			.content-footer {
				margin-top: 3em;
				padding-top: 2em;
				border-top: 1px solid var(--border-faint);
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="prose">
					<div class="title">
						<h1>{title}</h1>
						<hr />
						<div class="meta">
							<span class="type">{type}</span>
							{genre.length > 0 && (
								<span class="genre">{genre.join(', ')}</span>
							)}
							<span class="date">
								<FormattedDate date={date} />
							</span>
							{pages && (
								<span class="pages">{pages} pages</span>
							)}
						</div>
					</div>
					<slot />
					<footer class="content-footer">
						<a href="/projects/" class="cta-link">‚Üê Back to all projects</a>
					</footer>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
