---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';
import { slugifyTag } from '../../utils/tags';

const poems = await getCollection('poetry');

// Group poems by year (oldest first)
const poemsByYear: Record<number, typeof poems> = {};
poems.forEach(poem => {
	const year = new Date(poem.data.date).getFullYear();
	if (!poemsByYear[year]) {
		poemsByYear[year] = [];
	}
	poemsByYear[year].push(poem);
});

// Sort years ascending (oldest first)
const sortedYears = Object.keys(poemsByYear)
	.map(Number)
	.sort((a, b) => a - b);

// Sort poems within each year by date ascending
sortedYears.forEach(year => {
	poemsByYear[year].sort((a, b) => a.data.date.valueOf() - b.data.date.valueOf());
});
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead 
			title="Poetry | Charles Slater" 
			description="A collection of poems by Charles Slater" 
		/>
	</head>
	<body>
		<Header />
		<main>
			<h1>Poetry</h1>
			<p class="intro">
				A collection of poems exploring themes of memory, family, and the moments that define us.
			</p>

			<div class="poetry-index">
				{sortedYears.map(year => (
					<section class="year-group">
						<h2 class="year-label">{year}</h2>
						<div class="poems-in-year">
							{poemsByYear[year].map(poem => (
								<div class="poem-entry">
									<a href={`/poetry/${poem.id}`} class="poem-title">
										{poem.data.title}
									</a>
									{poem.data.tags && poem.data.tags.length > 0 && (
										<div class="poem-tags">
											{poem.data.tags.slice(0, 3).map((tag: string) => (
												<a href={`/poetry/tags/${slugifyTag(tag)}`} class="tag-link">
													{tag}
												</a>
											))}
										</div>
									)}
								</div>
							))}
						</div>
					</section>
				))}
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	.intro {
		font-size: 1.1em;
		color: rgb(var(--gray));
		margin-bottom: 3em;
	}

	.poetry-index {
		column-count: 4;
		column-gap: 2em;
		column-rule: 1px solid rgb(var(--gray-light));
	}

	.year-group {
		break-inside: avoid;
		margin-bottom: 2.5em;
	}

	.year-label {
		font-size: 1.5em;
		font-weight: 700;
		color: rgb(var(--black));
		margin: 0 0 1em 0;
		border-bottom: 2px solid var(--accent);
		padding-bottom: 0.25em;
	}

	.poems-in-year {
		display: flex;
		flex-direction: column;
		gap: 1em;
	}

	.poem-entry {
		break-inside: avoid;
	}

	.poem-title {
		display: block;
		color: rgb(var(--black));
		text-decoration: none;
		font-size: 1em;
		line-height: 1.4;
		margin-bottom: 0.25em;
		font-weight: 500;
	}

	.poem-title:hover {
		color: var(--accent-dark);
		text-decoration: underline;
	}

	.poem-tags {
		display: flex;
		gap: 0.4em;
		flex-wrap: wrap;
		margin-top: 0.25em;
	}

	.tag-link {
		background: rgb(var(--gray-light));
		padding: 0.15em 0.5em;
		border-radius: 3px;
		font-size: 0.75em;
		color: rgb(var(--gray-dark));
		text-decoration: none;
		transition: background 0.2s ease;
	}

	.tag-link:hover {
		background: var(--accent);
		color: white;
	}

	/* Responsive columns */
	@media (max-width: 1024px) {
		.poetry-index {
			column-count: 3;
		}
	}

	@media (max-width: 768px) {
		.poetry-index {
			column-count: 2;
			column-gap: 1.5em;
		}
	}

	@media (max-width: 500px) {
		.poetry-index {
			column-count: 1;
		}
	}
</style>
