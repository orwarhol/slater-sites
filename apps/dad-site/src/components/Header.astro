---
import { SITE_TITLE } from '../consts';

const { pathname } = Astro.url;

// Helper to determine if a link is active
function isActive(href: string, currentPath: string): boolean {
	if (href === '/') {
		return currentPath === '/';
	}
	return currentPath === href || currentPath.startsWith(href + '/');
}

const links = [
	{ href: '/', label: 'Home' },
	{ href: '/poetry', label: 'Poetry' },
	{ href: '/novels', label: 'Novels' },
	{ href: '/gallery', label: 'Gallery' },
];
---

<header class="site-header">
	<nav class="site-nav">
		<h1 class="site-logo site-brand"><a href="/">{SITE_TITLE}</a></h1>
		<button class="hamburger" aria-expanded="false" aria-controls="mobile-nav-drawer" aria-label="Toggle navigation menu">
			<span></span>
			<span></span>
			<span></span>
		</button>
		<div class="nav-links site-nav-list">
			{links.map(link => {
				const active = isActive(link.href, pathname);
				return (
					<a 
						href={link.href} 
						class:list={['nav-link', 'site-nav-link', { 'is-active': active }]}
						aria-current={active ? 'page' : undefined}
					>
						{link.label}
					</a>
				);
			})}
		</div>
	</nav>
</header>

<script>
	// Initialize mobile navigation drawer
	(function initMobileNav() {
		// Check if already initialized
		if (document.getElementById('site-frame')) return;

		// Create site frame wrapper
		const siteFrame = document.createElement('div');
		siteFrame.id = 'site-frame';

		// Move all body children into site frame
		while (document.body.firstChild) {
			siteFrame.appendChild(document.body.firstChild);
		}

		// Create overlay
		const overlay = document.createElement('div');
		overlay.className = 'mobile-nav__overlay';
		overlay.setAttribute('aria-hidden', 'true');

		// Create drawer
		const drawer = document.createElement('nav');
		drawer.id = 'mobile-nav-drawer';
		drawer.className = 'mobile-nav__drawer';
		drawer.setAttribute('aria-hidden', 'true');
		drawer.setAttribute('aria-modal', 'true');
		drawer.setAttribute('role', 'dialog');

		// Clone nav links into drawer
		const navLinks = siteFrame.querySelector('.nav-links');
		if (navLinks) {
			const drawerLinks = navLinks.cloneNode(true) as HTMLElement;
			drawerLinks.className = 'mobile-nav__links';
			drawer.appendChild(drawerLinks);
		}

		// Append to body
		document.body.appendChild(siteFrame);
		document.body.appendChild(overlay);
		document.body.appendChild(drawer);

		// Get hamburger button
		const hamburger = document.querySelector('.hamburger') as HTMLButtonElement | null;
		if (!hamburger) return;

		// Create a stable reference for the hamburger button
		const hamburgerElement = hamburger;

		// Toggle navigation
		function toggleNav(open?: boolean) {
			const isOpen = open ?? !document.body.classList.contains('nav-open');
			document.body.classList.toggle('nav-open', isOpen);
			hamburgerElement.setAttribute('aria-expanded', String(isOpen));
			overlay.setAttribute('aria-hidden', String(!isOpen));
			drawer.setAttribute('aria-hidden', String(!isOpen));

			if (isOpen) {
				// Focus first link in drawer
				const firstLink = drawer.querySelector('a');
				firstLink?.focus();
			} else {
				// Return focus to hamburger
				hamburgerElement.focus();
			}
		}

		// Event listeners
		hamburgerElement.addEventListener('click', () => toggleNav());
		overlay.addEventListener('click', () => toggleNav(false));

		// Close on Escape
		document.addEventListener('keydown', (e) => {
			if (e.key === 'Escape' && document.body.classList.contains('nav-open')) {
				toggleNav(false);
			}
		});

		// Close when clicking drawer links
		drawer.addEventListener('click', (e) => {
			if ((e.target as HTMLElement).tagName === 'A') {
				toggleNav(false);
			}
		});
	})();
</script>

<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--surface-1);
		box-shadow: var(--shadow);
		border-bottom: 1px solid transparent;
		border-image: var(--fine-border-gradient) 0 0 1 0;
		border-image-slice: 0 0 1 0;
	}

	h1 {
		margin: 0;
		font-size: 1.5em;
		font-weight: 600;
	}

	h1.site-logo {
		font-family: var(--font-brand);
		text-transform: uppercase;
		font-weight: 400;
	}

	h1 a {
		text-decoration: none;
		color: var(--text);
		position: relative;
	}

	/* Remove underline on all states for logo - comprehensive coverage */
	h1 a,
	h1 a:link,
	h1 a:visited,
	h1 a:hover,
	h1 a:active,
	h1 a:focus,
	h1 a:focus-visible {
		text-decoration: none !important;
	}

	/* Focus visible style for logo link - keep accessible outline */
	h1 a:focus-visible {
		outline: 2px solid var(--accent);
		outline-offset: 3px;
		border-radius: 2px;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1em;
		padding: 1em 0;
		position: relative;
	}

	nav h1 {
		min-width: 0;
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
	}

	/* Hamburger button - hidden on desktop */
	.hamburger {
		display: none;
		flex-direction: column;
		gap: 4px;
		background: transparent;
		border: none;
		cursor: pointer;
		padding: 0.5em;
		margin-left: auto;
		z-index: 1;
	}
	.hamburger span {
		display: block;
		width: 24px;
		height: 3px;
		background: var(--text);
		border-radius: 2px;
		transition: all 0.3s ease;
	}
	.hamburger:focus {
		outline: var(--focus-ring);
		outline-offset: 2px;
	}

	.nav-links {
		display: flex;
		gap: clamp(1rem, 2vw, 2rem);
		white-space: nowrap;
		flex: 0 0 auto;
	}

	/* Desktop: center nav links */
	@media (min-width: 931px) {
		.nav-links {
			position: absolute;
			left: 50%;
			transform: translateX(-50%);
		}
	}

	.nav-links a {
		padding: 0.35rem 0.5rem;
		color: var(--accent);
		text-decoration: none;
		position: relative;
		transition: color 0.2s ease;
		/* Explicit nav typography: Rubik 400 */
		font-family: var(--font-body);
		font-weight: 400;
	}

	/* L-corner indicators and focus styles are in global.css for desktop */
	/* Focus visible state */
	.nav-links a:focus-visible {
		outline: 2px solid var(--accent);
		outline-offset: 2px;
		border-radius: 2px;
	}

	@media (max-width: 930px) {
		.hamburger {
			display: flex;
		}

		h1 {
			font-size: 1.25em;
		}

		.nav-links {
			display: none;
		}
	}
</style>
