---
const today = new Date();
---

<footer>
	<p>&copy; {today.getFullYear()} Charles Slater. All rights reserved.</p>
</footer>

<style>
	footer {
		margin-top: 4em;
		padding: 2em 1em;
		background: var(--surface-1);
		backdrop-filter: blur(var(--glass-blur));
		-webkit-backdrop-filter: blur(var(--glass-blur));
		border-top: 1px solid var(--border);
		text-align: center;
		color: var(--muted);
		font-size: 0.9em;
	}

	footer p {
		margin: 0;
	}
	
	footer a {
		color: var(--accent);
	}
	
	footer a:hover {
		color: var(--accent-hover);
	}
</style>
