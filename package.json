		"build:dad": "npm run build --workspace=dad-site",
		"import:ian": "node scripts/import-squarespace-ian.mjs",
		"import:dad": "node scripts/import-squarespace-dad.mjs"
	},
	"devDependencies": {
		"turndown": "^7.2.0"
	}
}
